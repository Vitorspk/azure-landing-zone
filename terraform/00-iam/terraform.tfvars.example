# Azure Tenant Configuration
# Note: subscription_id is now read from ARM_SUBSCRIPTION_ID environment variable
#       Set it via: export ARM_SUBSCRIPTION_ID="your-subscription-id"
#       Or in GitHub Actions secrets as: AZURE_SUBSCRIPTION_ID
tenant_id = "your-tenant-id-here"

# Resource Group Configuration
resource_group_name = "rg-network"
location            = "brazilsouth" # or "eastus"

# Project Configuration
project_name = "azure-landing-zone"
environment  = "shared"

# Identity Configuration
create_service_principal = false # Set to true if you need a Service Principal for automation
create_aks_identity      = true  # Create Managed Identities for AKS clusters

# Tags
tags = {
  Project     = "azure-landing-zone"
  ManagedBy   = "terraform"
  Environment = "shared"
  CostCenter  = "infrastructure"
}
